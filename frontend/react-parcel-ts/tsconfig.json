{
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "strict": true,
    "rootDir": "./src",
    "incremental": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "baseUrl": "./src",
    "paths": {
      "~*": [
        "./*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@testing-library/react"
    ],
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
